<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="15dp">

    <!-- This library requires pair of the VerticalSeekBar and VerticalSeekBarWrapper classes -->
    <idk.core.engine.custom.VerticalSeekBarWrapper
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <idk.core.engine.custom.VerticalSeekBar
            android:id="@+id/seek_z_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:max="1000"
            android:progress="500"
            android:splitTrack="false" /> <!-- Rotation: CW90 or CW270 -->
    </idk.core.engine.custom.VerticalSeekBarWrapper>

    <SeekBar
        android:id="@+id/seek_x_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:max="1000"
        android:progress="500" />

    <idk.core.engine.custom.VerticalSeekBarWrapper
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0">

        <idk.core.engine.custom.VerticalSeekBar
            android:id="@+id/seek_y_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:max="1000"
            android:progress="500" />
    </idk.core.engine.custom.VerticalSeekBarWrapper>
</LinearLayout>